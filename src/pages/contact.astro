---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const SITE_URL = 'https://nodecms.guide';

const pages = await getCollection('pages');
const contactPage = pages.find((page) => page.id === 'contact.md' || page.slug === 'contact');

if (!contactPage) {
  throw new Error('Contact page not found');
}

const { Content } = await contactPage.render();
const shareText = 'Check out Node CMS Guide, a leaderboard of Node.js content management systems: ';
---

<BaseLayout title="Contact" shareUrl={SITE_URL} shareText={shareText}>
  <Header shareUrl={SITE_URL} shareText={shareText} />
  <div class="content">
    <div class="sheet text">
      <Content />
    </div>
  </div>
  <Footer />
</BaseLayout>
