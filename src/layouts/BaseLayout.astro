---
import '../styles/global.css';

interface Props {
  title?: string;
  shareUrl?: string;
  shareText?: string;
}

const { title, shareUrl = 'https://nodecms.guide', shareText = 'Check out Node CMS Guide, a leaderboard of Node.js content management systems: ' } = Astro.props;
const pageTitle = title ? `${title} | NodeCMSGuide` : 'NodeCMSGuide | Node.js Content Management System leaderboard';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>{pageTitle}</title>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Open Graph -->
    <meta property="og:title" content="NodeCMSGuide" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nodecms.guide/" />
    <meta property="og:image" content="https://nodecms.guide/images/nodecmsguide.png" />
    <meta property="og:description" content="nodecms.guide is a leaderboard of Node.js content management systems." />
  </head>
  <body>
    <slot />
  </body>
</html>
